<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Section</th>
      <th>State</th>
      <th>Joined Course</th>
      <th>Joined Section</th>
      <th>Dropped Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student.display_name %></td>
        <td><%= enrollment.section.short_name %></td>
        <td><%= enrollment.state %></td>
        <td><%= enrollment.joined_course %></td>
        <td><%= enrollment.joined_section %></td>
        <td><%= enrollment.dropped_course %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

