<p id="notice"><%= notice %></p>

<h1>Term Names</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_names.each do |term_name| %>
      <tr>
        <td><%= term_name.name %></td>
        <td><%= term_name.short_name %></td>
        <td><%= link_to 'Show', term_name %></td>
        <td><%= link_to 'Edit', edit_term_name_path(term_name) %></td>
        <td><%= link_to 'Destroy', term_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

