<h1><span>Attendance Records</span>
  <span><%= link_to '+', new_attendance_record_path %></span></h1>

<table class='table table-sm table-striped'>
  <thead class='thead-dark'>
    <tr>
      <th scope='row'>Section</th>
      <th scope='row'>Student</th>
      <th scope='row'>Attendance date</th>
      <th scope='row'>Primary</th>
      <th scope='row'>Secondary</th>
      <th scope='row'>Annotation</th>
      <th scope='row' colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendance_records.each do |attendance_record| %>
      <tr>
        <td><%= attendance_record.section_id %></td>
        <td><%= attendance_record.student_id %></td>
        <td><%= attendance_record.attendance_date %></td>
        <td><%= attendance_record.primary %></td>
        <td><%= attendance_record.secondary %></td>
        <td><%= attendance_record.annotation %></td>
        <td><%= link_to 'Show', attendance_record %></td>
        <td><%= link_to 'Edit', edit_attendance_record_path(attendance_record) %></td>
        <td><%= link_to 'Destroy', attendance_record,
          method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
