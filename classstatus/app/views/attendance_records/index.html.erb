<h1>Attendance Records</h1>

<%= link_to 'New Attendance Record', new_attendance_record_path %>

<br><br>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Student', sort: 'family_name' %></th>
      <th>Section</th>
      <th>Attendance date</th>
      <th>Attendance entered</th>
      <th>Primary</th>
      <th>Secondary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendance_records.each do |attendance_record| %>
      <tr>
        <td><%= attendance_record.student.name %></td>
        <td><%= attendance_record.section.name %></td>
        <td><%= attendance_record.attendance_date %></td>
        <td><%= attendance_record.attendance_entered %></td>
        <td><%= attendance_record.primary %></td>
        <td><%= attendance_record.secondary %></td>
        <td><%= link_to 'Show', attendance_record %></td>
        <td><%= link_to 'Edit', edit_attendance_record_path(attendance_record) %></td>
        <td><%= link_to 'Destroy', attendance_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
