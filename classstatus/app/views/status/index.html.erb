
<div class="grid">

  <% max_col = 8; max_row = 4; c = 0; r = 0 %>
  <% @students.each do |s| %>
    <div class="item">
      <div class="item-content">
        <!-- Safe zone, enter your custom markup -->
        <%= s.given_name %>
        <!-- Safe zone ends -->
      </div>
    </div>
  <% end %>

</div>

