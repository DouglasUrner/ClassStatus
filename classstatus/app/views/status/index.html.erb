
<div class="grid">

  <% @students.each do |s| %>
    <div class="item">
      <div class="item-content">
        <!-- Safe zone, enter your custom markup -->
        <p class="student-name"><%= s.given_name %></p>
        <p><a href="https://github.com/<%= s.github_user %>"><%= s.github_user %></a></p>
        <!-- Safe zone ends -->
      </div>
    </div>
  <% end %>

  <% empty_seats = 30 - @students.count %>
  <% until (empty_seats == 0) %>
    <div class="item">
      <div class="item-content">
        <!-- Safe zone, enter your custom markup -->
        <% empty_seats %>
        <!-- Safe zone ends -->
      </div>
    </div>
    <% empty_seats = empty_seats - 1 %>
  <% end %>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/web-animations/2.3.1/web-animations.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.min.js"></script>
<script src="https://unpkg.com/muuri@0.6.3/dist/muuri.min.js"></script>

<script type="text/javascript">
  var grid = new Muuri('.grid', {dragEnabled: true});
</script>
