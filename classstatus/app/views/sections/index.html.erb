<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Year</th>
      <th>Term</th>
      <th>Block</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |s| %>
      <tr>
        <td><%= s.course.name %></td>
        <td><%= s.year.name %></td>
        <td><%= s.term.name %></td>
        <td><%= s.block.name %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_section_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
