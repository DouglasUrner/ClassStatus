<%= form_with model: @section, local: true do |form| %>

  <% if @section.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@section.errors.count, "error") %> prevented
      this section from being saved:
    </h2>
    <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :course %><br>
    <%= form.collection_select :course_id, Course.order(:name), :id, :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
