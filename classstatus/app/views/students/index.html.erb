<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>GUID</th>
      <th>Name</th>
      <th>Sections</th>
      <th>Birthday</th>
      <th>Cohort</th>
      <th>GPA</th>
      <th>GPA Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.guid %></td>
        <td><%= student.display_name %></td>
        <td><%= student.section_list %></td>
        <td><%= student.dob %></td>
        <td><%= student.cohort %></td>
        <td><%= '%.2f' % student.gpa %></td>
        <td><%= student.gpa_updated %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete,
          data: { confirm: "Delete #{student.display_name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>

<br>

<h3>Import Students</h3>
<%= form_tag import_students_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= select_tag :section,
        options_from_collection_for_select(Section.order(:block_id), "id", "name"),
        include_blank: "Select Section" %>
  <%= submit_tag "Import JSON" %>
<% end %>
